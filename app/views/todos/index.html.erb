<p id="notice"><%= notice %></p>
<h1>Todos</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Desc</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
	<ul>
    <% @todos.each do |todo| %>
      <li>
	      <strong><%= todo.title %></strong>
	      <p><%= todo.desc %></p>
	      <button><%= link_to 'Show', todo %></button>
	      <button><%= link_to 'Edit', edit_todo_path(todo) %></button>
	      <button><%= link_to 'Destroy', todo, method: :delete, data: { confirm: 'Are you sure?' } %></button>
      </li>
      
    <% end %>
	</ul>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path %>
